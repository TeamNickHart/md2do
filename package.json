{
  "name": "md2do-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "CLI tool for scanning and managing TODO items in markdown files",
  "keywords": [
    "markdown",
    "todo",
    "task",
    "cli"
  ],
  "author": "Nick Hart",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test run",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "validate": "pnpm build && pnpm lint && pnpm format:check && pnpm typecheck && pnpm test:run",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky install",
    "link:cli": "cd packages/cli && pnpm link --global",
    "unlink:cli": "cd packages/cli && pnpm unlink --global",
    "cli": "node packages/cli/dist/cli.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.4",
    "vitest": "^1.0.4"
  }
}
