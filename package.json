{
  "name": "md2do-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "CLI tool for scanning and managing TODO items in markdown files",
  "keywords": [
    "markdown",
    "todo",
    "task",
    "cli"
  ],
  "author": "Nicholas Hart <nickhart@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "test:run": "pnpm -r run test:run",
    "test:coverage": "pnpm -r run test:coverage",
    "test:coverage:ui": "pnpm -r test --coverage --ui",
    "test:e2e": "./scripts/e2e-test.sh",
    "test:examples": "./scripts/validate-examples.sh",
    "test:fresh-install": "./scripts/fresh-install-test.sh",
    "test:package": "./scripts/npm-publish-test.sh",
    "test:all": "pnpm test:run && pnpm test:e2e && pnpm test:fresh-install",
    "coverage": "pnpm test:coverage",
    "coverage:report": "open packages/*/coverage/index.html",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "validate": "pnpm build && pnpm lint && pnpm format:check && pnpm typecheck && pnpm test:run",
    "validate:all": "pnpm validate && pnpm test:e2e",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:coverage": "rm -rf packages/*/coverage",
    "prepare": "husky install",
    "link:cli": "cd packages/cli && pnpm link --global",
    "unlink:cli": "cd packages/cli && pnpm unlink --global",
    "cli": "node packages/cli/dist/cli.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --lockfile-only",
    "release": "pnpm build && changeset publish --provenance"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.4",
    "vitest": "^1.0.4"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}
