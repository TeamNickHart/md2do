{
  "name": "md2do-vscode",
  "displayName": "md2do",
  "description": "Intelligent markdown task management with Todoist integration",
  "version": "0.2.0",
  "publisher": "md2do",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "markdown",
    "todo",
    "task",
    "todoist",
    "task-management",
    "productivity"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "workspaceContains:**/*.md"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "md2do.toggleComplete",
        "title": "md2do: Toggle Task Completion",
        "category": "md2do"
      },
      {
        "command": "md2do.openDashboard",
        "title": "md2do: Open Dashboard",
        "category": "md2do",
        "icon": "$(dashboard)"
      },
      {
        "command": "md2do.refreshTasks",
        "title": "md2do: Refresh Tasks",
        "category": "md2do",
        "icon": "$(refresh)"
      },
      {
        "command": "md2do.toggleTaskFromTree",
        "title": "Toggle Completion",
        "icon": "$(check)"
      },
      {
        "command": "md2do.editTask",
        "title": "Edit Task",
        "icon": "$(edit)"
      },
      {
        "command": "md2do.copyTaskAsMarkdown",
        "title": "Copy as Markdown",
        "icon": "$(copy)"
      },
      {
        "command": "md2do.deleteTask",
        "title": "Delete Task",
        "icon": "$(trash)"
      },
      {
        "command": "md2do.groupByFile",
        "title": "Group by File",
        "category": "md2do",
        "icon": "$(file)"
      },
      {
        "command": "md2do.groupByAssignee",
        "title": "Group by Assignee",
        "category": "md2do",
        "icon": "$(person)"
      },
      {
        "command": "md2do.groupByDueDate",
        "title": "Group by Due Date",
        "category": "md2do",
        "icon": "$(calendar)"
      },
      {
        "command": "md2do.groupByPriority",
        "title": "Group by Priority",
        "category": "md2do",
        "icon": "$(flame)"
      },
      {
        "command": "md2do.groupByTag",
        "title": "Group by Tag",
        "category": "md2do",
        "icon": "$(tag)"
      },
      {
        "command": "md2do.groupFlat",
        "title": "Flat List (No Grouping)",
        "category": "md2do",
        "icon": "$(list-flat)"
      },
      {
        "command": "md2do.toggleIncompleteOnly",
        "title": "Toggle: Show Incomplete Only",
        "category": "md2do",
        "icon": "$(circle-outline)"
      },
      {
        "command": "md2do.toggleOverdueOnly",
        "title": "Toggle: Show Overdue Only",
        "category": "md2do",
        "icon": "$(warning)"
      },
      {
        "command": "md2do.toggleAssignedOnly",
        "title": "Toggle: Show Assigned Only",
        "category": "md2do",
        "icon": "$(person)"
      },
      {
        "command": "md2do.sortByDueDate",
        "title": "Sort by Due Date",
        "category": "md2do"
      },
      {
        "command": "md2do.sortByPriority",
        "title": "Sort by Priority",
        "category": "md2do"
      },
      {
        "command": "md2do.sortAlphabetically",
        "title": "Sort Alphabetically",
        "category": "md2do"
      },
      {
        "command": "md2do.sortByLine",
        "title": "Sort by Line Number",
        "category": "md2do"
      }
    ],
    "keybindings": [
      {
        "command": "md2do.toggleComplete",
        "key": "cmd+k enter",
        "mac": "cmd+k enter",
        "win": "ctrl+k enter",
        "linux": "ctrl+k enter",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "md2doTasks",
          "name": "md2do Tasks"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "md2do.groupByFile",
          "when": "view == md2doTasks",
          "group": "1_grouping@1"
        },
        {
          "command": "md2do.groupByAssignee",
          "when": "view == md2doTasks",
          "group": "1_grouping@2"
        },
        {
          "command": "md2do.groupByDueDate",
          "when": "view == md2doTasks",
          "group": "1_grouping@3"
        },
        {
          "command": "md2do.groupByPriority",
          "when": "view == md2doTasks",
          "group": "1_grouping@4"
        },
        {
          "command": "md2do.groupByTag",
          "when": "view == md2doTasks",
          "group": "1_grouping@5"
        },
        {
          "command": "md2do.groupFlat",
          "when": "view == md2doTasks",
          "group": "1_grouping@6"
        },
        {
          "command": "md2do.toggleIncompleteOnly",
          "when": "view == md2doTasks",
          "group": "2_filters@1"
        },
        {
          "command": "md2do.toggleOverdueOnly",
          "when": "view == md2doTasks",
          "group": "2_filters@2"
        },
        {
          "command": "md2do.toggleAssignedOnly",
          "when": "view == md2doTasks",
          "group": "2_filters@3"
        },
        {
          "command": "md2do.sortByDueDate",
          "when": "view == md2doTasks",
          "group": "3_sorting@1"
        },
        {
          "command": "md2do.sortByPriority",
          "when": "view == md2doTasks",
          "group": "3_sorting@2"
        },
        {
          "command": "md2do.sortAlphabetically",
          "when": "view == md2doTasks",
          "group": "3_sorting@3"
        },
        {
          "command": "md2do.sortByLine",
          "when": "view == md2doTasks",
          "group": "3_sorting@4"
        },
        {
          "command": "md2do.refreshTasks",
          "when": "view == md2doTasks",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "md2do.toggleTaskFromTree",
          "when": "view == md2doTasks && viewItem == incompleteTask",
          "group": "inline@1"
        },
        {
          "command": "md2do.editTask",
          "when": "view == md2doTasks && (viewItem == incompleteTask || viewItem == completedTask)",
          "group": "1_actions@1"
        },
        {
          "command": "md2do.toggleTaskFromTree",
          "when": "view == md2doTasks && (viewItem == incompleteTask || viewItem == completedTask)",
          "group": "1_actions@2"
        },
        {
          "command": "md2do.copyTaskAsMarkdown",
          "when": "view == md2doTasks && (viewItem == incompleteTask || viewItem == completedTask)",
          "group": "2_clipboard@1"
        },
        {
          "command": "md2do.deleteTask",
          "when": "view == md2doTasks && (viewItem == incompleteTask || viewItem == completedTask)",
          "group": "3_danger@1"
        }
      ]
    },
    "configuration": {
      "title": "md2do",
      "properties": {
        "md2do.autoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan workspace for tasks"
        },
        "md2do.warnings.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show md2do validation warnings in Problems panel"
        },
        "md2do.defaultAssignees": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of default assignees for auto-completion (e.g. [\"@alice\", \"@bob\"])"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm build",
    "package": "vsce package --no-dependencies",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@md2do/core": "workspace:*",
    "@md2do/config": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "tsup": "^8.0.1"
  }
}
