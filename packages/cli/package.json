{
  "name": "@md2do/cli",
  "version": "0.1.0",
  "description": "CLI interface for md2do task manager",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "md2do": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format cjs --dts",
    "dev": "tsup src/cli.ts src/index.ts --format cjs --dts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@md2do/core": "workspace:*",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "cosmiconfig": "^9.0.0",
    "date-fns": "^3.0.6",
    "fast-glob": "^3.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "tsup": "^8.0.1"
  }
}
