{
  "name": "@md2do/cli",
  "version": "0.1.0",
  "description": "CLI interface for md2do task manager",
  "keywords": [
    "markdown",
    "todo",
    "task",
    "cli",
    "todoist",
    "mcp",
    "task-management"
  ],
  "homepage": "https://md2do.com",
  "bugs": "https://github.com/TeamNickHart/md2do/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/TeamNickHart/md2do.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "author": "Nicholas Hart <nickhart@gmail.com>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "md2do": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format cjs --dts",
    "dev": "tsup src/cli.ts src/index.ts --format cjs --dts --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@doist/todoist-api-typescript": "^3.0.3",
    "@md2do/config": "workspace:*",
    "@md2do/core": "workspace:*",
    "@md2do/todoist": "workspace:*",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "cosmiconfig": "^9.0.0",
    "date-fns": "^3.0.6",
    "fast-glob": "^3.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "tsup": "^8.0.1"
  }
}
